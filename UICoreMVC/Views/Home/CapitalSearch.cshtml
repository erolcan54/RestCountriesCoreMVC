@using Entities.Concrete
@model Entities.Concrete.Root
@{
    ViewData["Title"] = "Home Page";
    List<Root> result = ViewData["List"] as List<Root>;
}


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#capitalModal">
    Capital'e göre Ara
</button>
<!-- Modal -->
<div class="modal fade" id="capitalModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Arama</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="get" asp-action="CapitalSearch" asp-controller="Home">
                    <div class="mb-2">
                        <label for="capital" class="form-label">Capital Aranacak Kelime</label>
                        <input class="form-control" type="text" asp-for="capital" required placeholder="Capital adını yazınız">
                    </div>
                    <div class="mb-2 text-center">
                        <button class="btn btn-primary" id="btnsave" type="submit">Gönder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-success" data-toggle="modal" data-target="#globalModal">
    Global Ara
</button>

<!-- Modal -->
<div class="modal fade" id="globalModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Arama</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="get" asp-action="GlobalSearch" asp-controller="Home">
                    <div class="mb-2">
                        <label for="key" class="form-label">Global Aranacak Kelime</label>
                        <input class="form-control" type="text" name="key" required placeholder="Global key yazınız">
                    </div>
                    <div class="mb-2 text-center">
                        <button class="btn btn-primary" id="btnsave" type="submit">Gönder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <br />
    <div style="margin:0 auto;">
        <table id="myTable" class="table table-striped table-bordered" width="100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Capital</th>
                    <th>Region</th>
                    <th>Flag</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in result)
                {
                    <tr>
                        <td>@item.name</td>
                        <td>@item.capital</td>
                        <td>@item.region</td>
                        <td><img width="50" height="50" src="@item.flag" /></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
